    <h1>Boas-vindas</h1>
    <button onclick="clicar()">Inicie o desafio</button>
    <script>
        function clicar(){
            var nome = prompt("Qual é o seu nome?")
            var idade = Number(prompt("Quantos anos você tem?"))
            alert(`Acabei de conhecer ${nome}, que tem ${idade} anos de idade!`)
        }
    </script>
