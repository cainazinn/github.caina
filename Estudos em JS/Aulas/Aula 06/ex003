        var n2 = Number(prompt("Digite outro número:"))
        var som = n1 + n2 // retorna uma string

        alert("A soma dos valores é igual a " + som)
        // + -> concatenação quando for (string + string)
        // + -> soma quando for (number + number)
    </script>
