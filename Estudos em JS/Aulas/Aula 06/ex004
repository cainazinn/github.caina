        var nome = prompt("Como você se chama?")
        document.write(`Olá ${nome}, seu nome possui ${nome.length} letras. Seu nome escritos com letras maiúsculas é <strong>${nome.toUpperCase()}</strong> <br>`)
        document.write(`Seu nome escrito com letras minúsculas fica <strong> ${nome.toLowerCase()}</strong>`)

    </script>    
