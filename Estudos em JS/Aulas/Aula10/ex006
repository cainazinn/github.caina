    <div id="area" onclick="clicar()" onmouseenter="entrar()" onmouseout="sair()">
        Interaja...
    </div>
    <script>
        var d = window.document.querySelector("div#area")

        function clicar(){
            d.innerText = "Clicou!"
            d.style.backgroundColor = "black"
            
        }
        function entrar(){
            d.innerText = "Entrou!"
        }
        function sair(){
            d.innerText = "Sa√≠u!"
            d.style.backgroundColor = "#46955f"
        }
        
    </script>
